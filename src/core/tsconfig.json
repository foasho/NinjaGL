{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@canvas-items/*": ["./canvas-items/*"],
      "@ui-items/*": ["./ui-items/*"],
      "@uis/*": ["./uis/*"],
      "@utils/*": ["./utils/*"],
      "@workers/*": ["./workers/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
